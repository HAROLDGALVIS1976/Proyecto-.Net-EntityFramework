@model IEnumerable<HUEVOSFESTIVAL.DAL.RUTA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
}


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Rutas....<h5><font color="green"><span>@DateTime.Today.ToLongDateString()</span></font></h5>
        <a href="../Ruta/AgregarRuta" class="btn btn-info pull-right fa fa-plus">Nueva Ruta</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Ruta</th>
                        <th>Habilitado</th>
                        <th>Operaciones</th>
                    </tr>
                </thead>

                <tbody>
                   @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.IDRUTA</td>
                            <td>@item.NOMBRERUTA</td>
                            <td>@item.BHABILITADO</td>
                            <td>
                                @Html.ActionLink("Editar", "EditarRuta", new { idruta = item.IDRUTA }@*, new {  @class="btn btn-success glyphicon glyphicon-edit"}*@)
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
