@model HUEVOSFESTIVAL.DAL.Tbl_Category

@{
    ViewBag.Title = "EditarCategoria";
    Layout = "~/Views/Shared/_AdminLayout2.cshtml";
    Html.EnableClientValidation(true);
    Html.EnableUnobtrusiveJavaScript(true);
}

<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Editar Categorias
    </div>
    <div class="card-body">

       @using (Html.BeginForm("EditarCategoria", "Categoria", FormMethod.Post, new { enctype = "muorm-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.CategoryId)

                <div class="form-group">
                    @Html.LabelFor(model => model.NombreCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NombreCategoria, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                        @Html.ValidationMessageFor(model => model.NombreCategoria, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BHABILITADO, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.BHABILITADO, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BHABILITADO, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="../Categoria/Index" class="btn btn-danger text-white">Cancelar</a>
                        <input type="submit" value="Guardar >>" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>