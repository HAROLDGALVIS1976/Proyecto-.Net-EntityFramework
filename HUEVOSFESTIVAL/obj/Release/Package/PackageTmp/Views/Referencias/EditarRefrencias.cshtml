@model HUEVOSFESTIVAL.DAL.REFERENCIAS

    @{
        ViewBag.Title = "EditarReferencias";
        Layout = "~/Views/Shared/_AdminLayout2.cshtml";
        Html.EnableClientValidation(true);
        Html.EnableUnobtrusiveJavaScript(true);
        //List<SelectListItem> data = ViewBag.CategoryList;
        List<SelectListItem> data = ViewBag.ListarCategoria;
    }
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Editar Referencias
        </div>
        <div class="card-body">


           @using (Html.BeginForm("EditarRefrencias", "Referencias", FormMethod.Post, new { enctype = "muorm-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IDREF)

                    <div class="form-group">
                        @Html.Label("Referencia", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.REF, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                            @Html.ValidationMessageFor(model => model.REF, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Descripcion", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.DESCRIPCION, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                            @Html.ValidationMessageFor(model => model.DESCRIPCION, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Cantidad", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CANT, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.CANT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Val-Costo", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.VALCOSTO_UNI, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.VALCOSTO_UNI, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Val-Venta", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.VALUNI_VENTA, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.VALUNI_VENTA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Cant-Minima", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.CANT_MINIMA, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.CANT_MINIMA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Val-Costo-Total", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.VALCOSTO_TOTAL, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                            @Html.ValidationMessageFor(model => model.VALCOSTO_TOTAL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Val-Venta-Total", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.VALVENTA_TOTAL, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                            @Html.ValidationMessageFor(model => model.VALVENTA_TOTAL, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @*@Html.EditorFor(model => model.IMAGEN, new { htmlAttributes = new { @class = "form-control" } })*@
                            <input type="file" name="IMAGEN" id="IMAGEN" style="width: 100%;" />                          
                            @Html.ValidationMessageFor(model => model.IMAGEN, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Unidad-de-Medida", htmlAttributes: new { @class = "control-label col-md-2", @readOnly = "true" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.UNI_MEDIDA, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.UNI_MEDIDA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    
                    <div class="form-group">
                        @Html.Label("CategoryId", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            
                            @Html.DropDownListFor(model => model.CategoryId, data, new { @class = "form-control", required = "required" })
                            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Habilitado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.BHABILITADO, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.BHABILITADO, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Val-Minimo-Venta", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.VALMIN_VENTA, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.VALMIN_VENTA, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Porcentaje", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.PORCENTAJE, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                            @Html.ValidationMessageFor(model => model.PORCENTAJE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-6">
                            <a href="../Referencias/Index" class="btn btn-danger text-white">Cancelar</a>
                            <input type="submit" value="Guardar >>" class="btn btn-success" />
                        </div>
                    </div>
                </div>
             }

        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
